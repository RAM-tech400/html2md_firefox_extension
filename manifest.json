{
    "manifest_version": 2,
    "name": "html2md",
    "version": "1.0",

    "description": "Convert the web page html file into a markdown file.",

    "icons": {
       "48": "./icons/ic_48.png"
    },
    
    "permissions": [ "activeTab" ],

    "browser_action": {
        "default_icon": "./icons/ic_browser_action_md_32.png",
        "default_title": "Convert page to MD",
        "default_popup": "./html/browser_action_popup.html"
    },

    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["./html2md.js"]
        }
    ]
}

